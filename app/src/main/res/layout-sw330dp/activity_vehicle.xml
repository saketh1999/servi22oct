<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/vehicle_2wheeler"

        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignLeft="@id/vehicle_ne4"
        android:layout_alignTop="@id/vehicle_ne4"
        android:layout_alignRight="@id/vehicle_ne7"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/box_orange" />




    <ImageButton
        android:id="@+id/vehicle_4wheeler"

        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignRight="@id/vehicle_ne4"
        android:layout_alignTop="@id/vehicle_2wheeler"
        android:layout_alignLeft="@id/vehicle_ne7"
        android:layout_marginLeft="50dp"
        android:background="@drawable/box_orange"/>

    <TextView
        android:id="@+id/vehicle_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/vehicle_ne6"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="19dp"
        android:text="customer care"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/vehicle_spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vehicle_ne10"
        android:layout_alignBottom="@id/vehicle_ne10"
        android:layout_marginTop="0dp"
        android:layout_marginRight="-40dp"


        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@id/vehicle_ne11"
        android:layout_toRightOf="@id/vehicle_ne10"
        android:background="@null"
        android:textSize="16sp"></Spinner>


    <Button
        android:id="@+id/vehicle_continue"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@id/vehicle_2wheeler"
        android:layout_alignTop="@id/vehicle_ne10"
        android:layout_alignRight="@id/vehicle_4wheeler"
        android:layout_marginTop="60dp"
        android:background="@drawable/button"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/vehicle_ne1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/ic_new_servii_logoartboard_3" />

    <View
        android:id="@+id/vehicle_ne2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignTop="@id/vehicle_ne1"
        android:layout_marginTop="131dp"
        android:background="@color/dark_grey" />

    <TextView
        android:id="@+id/vehicle_ne3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vehicle_ne2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:text="VEHICLE TYPE"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/vehicle_ne4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/vehicle_ne3"
        android:layout_alignTop="@id/vehicle_ne3"
        android:layout_alignRight="@id/vehicle_ne3"
        android:layout_marginTop="35dp"
        android:text="Help us identify your vehicle"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <View
        android:id="@+id/vehicle_ne5"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/vehicle_ne6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="Need help? Contact                               "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/vehicle_ne7"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vehicle_2wheeler"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/or"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/vehicle_ne8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/vehicle_2wheeler"
        android:layout_alignRight="@id/vehicle_2wheeler"
        android:layout_alignTop="@id/vehicle_2wheeler"
        android:layout_marginTop="155dp"
        android:text="2 Wheeler"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/vehicle_ne9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/vehicle_4wheeler"
        android:layout_alignRight="@id/vehicle_4wheeler"
        android:layout_alignTop="@id/vehicle_4wheeler"
        android:layout_marginTop="155dp"
        android:text="4 Wheeler"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/vehicle_ne10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/vehicle_2wheeler"
        android:layout_alignTop="@id/vehicle_2wheeler"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="5dp"
        android:text="    My vehicle is   "
        android:layout_marginRight="5dp"
        android:textSize="18dp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/vehicle_ne11"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/vehicle_4wheeler"
        android:layout_alignTop="@id/vehicle_ne10"
        android:layout_alignRight="@id/vehicle_4wheeler"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="2dp"
        android:text="   in color"
        android:textColor="@color/colorAccent"
        android:textSize="18dp" />

    <View
        android:id="@+id/vehicle_ne12"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignTop="@id/vehicle_ne10"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@id/vehicle_ne10"
        android:layout_alignRight="@id/vehicle_ne11"
        android:background="@color/colorAccent" />

    <ImageView
        android:id="@+id/vehicle_ne13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vehicle_spinner"
        android:layout_alignRight="@id/vehicle_spinner"
        android:layout_alignBottom="@id/vehicle_spinner"
        android:layout_marginTop="5dp"

        android:layout_marginRight="-6dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/small_spinner" />

    <ImageView
        android:id="@+id/vehicle_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vehicle_ne1"
        android:layout_alignBottom="@id/vehicle_ne2"
        android:layout_marginTop="80dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/vehicle_ne1"
        app:srcCompat="@drawable/ic_left_arrow" />

    <TextView
        android:id="@+id/vehi_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"/>
</RelativeLayout>