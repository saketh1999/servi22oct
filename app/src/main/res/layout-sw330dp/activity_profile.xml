<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_Container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/profile_ne4"
        android:layout_alignTop="@id/profile_ne6"
        android:layout_alignRight="@id/profile_ne4"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter your name"
        android:textCursorDrawable="@color/orange"
        android:backgroundTint="@color/orange"
        android:textColorHint="@color/colorAccent"
        android:textColorLink="@color/colorPrimary"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/profile_locality"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@id/profile_ne8"
        android:layout_alignRight="@id/profile_ne8"
        android:layout_alignBottom="@id/profile_ne8"
        android:layout_alignTop="@id/profile_ne8"
        android:layout_margin="7dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:hint="Select your locality"
        android:inputType=""
        android:background="@null"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <Button
        android:id="@+id/profile_continue"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@id/profile_ne8"
        android:layout_alignTop="@id/profile_locality"
        android:layout_alignRight="@id/profile_ne8"
        android:layout_marginTop="70dp"
        android:background="@drawable/button"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/profile_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/profile_ne3"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="190dp"
        android:layout_marginBottom="19dp"
        android:text="Terms And Conditions"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/profile_ne1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/ic_new_servii_logoartboard_3" />

    <View
        android:id="@+id/profile_ne2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/profile_ne3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="By creating an account I accept the                                         "
        android:textSize="12sp" />

    <TextView
        android:id="@+id/profile_ne4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/profile_ne7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="20dp"
        android:text="PROFILE"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/profile_ne5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/profile_ne4"
        android:layout_alignTop="@id/profile_ne4"
        android:layout_alignRight="@id/profile_ne4"
        android:layout_marginTop="30dp"
        android:text="Enter your details"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/profile_ne6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/profile_ne4"
        android:layout_alignTop="@id/profile_ne5"
        android:layout_alignRight="@id/profile_ne4"
        android:layout_marginTop="44dp"
        android:text="Enter your name"
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />

    <View
        android:id="@+id/profile_ne7"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignTop="@id/profile_ne1"
        android:layout_marginTop="155dp"
        android:background="@color/dark_grey" />

    <View
        android:id="@+id/profile_ne8"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@id/profile_ne9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="27dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/box_darkgrey" />

    <TextView
        android:id="@+id/profile_ne9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/profile_ne4"
        android:layout_alignTop="@id/profile_name"
        android:layout_alignRight="@id/profile_ne4"
        android:layout_marginTop="63dp"
        android:text="Select locality"
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />





</RelativeLayout>