<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/plan_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/plan_ne1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="12dp"
        android:text="customer care"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/plan_back"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_left_arrow" />

    <Button
        android:id="@+id/plan_free"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@color/orange"
        android:text="Activate FREE trial (5 days)"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/plan_ne1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="Need help? Contact                               "
        android:textSize="12sp" />

    <View
        android:id="@+id/plan_ne2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:background="@color/colorPrimaryDark" />

    <ScrollView
        android:id="@+id/plan_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plan_free"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/plan_free"
        android:layout_alignRight="@id/plan_free"
        android:layout_alignBottom="@id/plan_ne2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:id="@+id/plan_rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/plan_monthly"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignLeft="@id/plan_ne4"
                android:layout_alignTop="@id/plan_ne4"
                android:layout_alignRight="@id/plan_ne5"
                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/box_orange"
                />

            <ImageView
                android:id="@+id/plan_quarterly"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignLeft="@id/plan_ne5"
                android:layout_alignTop="@id/plan_monthly"
                android:layout_alignRight="@id/plan_ne3"
                android:layout_marginLeft="40dp"
                android:background="@drawable/box_orange" />

            <ImageView
                android:id="@+id/plan_half"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignLeft="@id/plan_monthly"
                android:layout_below="@id/plan_monthly"
                android:layout_alignRight="@id/plan_monthly"
                android:layout_marginTop="30dp"
                android:background="@drawable/box_orange" />

            <ImageView
                android:id="@+id/plan_year"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignLeft="@id/plan_quarterly"
                android:layout_below="@id/plan_quarterly"
                android:layout_marginTop="30dp"
                android:layout_alignRight="@id/plan_quarterly"
                android:background="@drawable/box_orange" />

            <TextView
                android:id="@+id/plan_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/plan_ne6"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/plan_ne6"
                android:text="click here"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

            <Button
                android:id="@+id/plan_continue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignTop="@id/plan_ne6"
                android:layout_marginTop="40dp"
                android:background="@drawable/button"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/plan_ne3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SELECT PLAN"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/plan_ne4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/plan_ne3"
                android:layout_marginTop="25dp"
                android:text="Choose payment plan"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/plan_ne5"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/plan_monthly"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/or"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/plan_ne6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/plan_half"
                android:layout_marginTop="15dp"
                android:text="To know more about each plan"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/plan_ne7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/plan_monthly"
                android:layout_alignTop="@id/plan_monthly"
                android:layout_alignRight="@id/plan_monthly"
                android:layout_alignBottom="@id/plan_monthly"
                android:fontFamily="@font/cocogoose_trial"
                android:gravity="center"
                android:text="Monthly"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/plan_ne8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/plan_monthly"
                android:layout_alignTop="@id/plan_monthly"
                android:layout_alignRight="@id/plan_monthly"
                android:layout_alignBottom="@id/plan_monthly"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:text="â‚¹400"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/plan_ne9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/plan_quarterly"
                android:layout_alignTop="@id/plan_quarterly"
                android:layout_alignRight="@id/plan_quarterly"
                android:layout_alignBottom="@id/plan_quarterly"
                android:fontFamily="@font/cocogoose_trial"
                android:gravity="center"
                android:text="Quarterly"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/plan_ne10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/plan_quarterly"
                android:layout_alignTop="@id/plan_quarterly"
                android:layout_alignRight="@id/plan_quarterly"
                android:layout_alignBottom="@id/plan_quarterly"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:text="9% off"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/plan_ne11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/plan_half"
                android:layout_alignTop="@id/plan_half"
                android:layout_alignRight="@id/plan_half"
                android:layout_alignBottom="@id/plan_half"
                android:fontFamily="@font/cocogoose_trial"
                android:gravity="center"
                android:text="Half yearly"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/plan_ne12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/plan_half"
                android:layout_alignTop="@id/plan_half"
                android:layout_alignRight="@id/plan_half"
                android:layout_alignBottom="@id/plan_half"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:text="18% off"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/plan_ne13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/plan_year"
                android:layout_alignTop="@id/plan_year"
                android:layout_alignRight="@id/plan_year"
                android:layout_alignBottom="@id/plan_year"
                android:fontFamily="@font/cocogoose_trial"
                android:gravity="center"
                android:text="Yearly"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/plan_ne14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/plan_year"
                android:layout_alignTop="@id/plan_year"
                android:layout_alignRight="@id/plan_year"
                android:layout_alignBottom="@id/plan_year"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:text="48% off"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>