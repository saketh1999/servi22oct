<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:id="@+id/login_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:indeterminateDrawable="@drawable/orangecolor"

        android:layout_centerInParent="true"
        android:layout_above="@+id/login_continue"

        android:visibility="invisible"
        > </ProgressBar>


    <TextView
        android:id="@+id/login_ne8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="By creating an account I accept the                                            "
        android:textSize="18sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/login_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/login_ne8"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="290dp"
        android:layout_marginBottom="25dp"
        android:text="Terms And Conditions"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:visibility="invisible"/>

    <com.bachors.prefixinput.EditText
        android:id="@+id/login_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/login_ne4"
        android:layout_alignTop="@id/login_ne6"
        android:layout_alignRight="@id/login_ne4"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="phone"
        android:text="+91 "
        android:backgroundTint="@color/orange"
        android:textCursorDrawable="@color/orange"
        android:textColorHint="@color/colorAccent"
        android:textColorLink="@color/colorPrimary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/login_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/login_ne4"
        android:layout_alignTop="@id/login_ne6"
        android:layout_alignRight="@id/login_ne4"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="phone"
        android:text=""
        android:visibility="invisible"
        android:textColorHint="@color/colorAccent"
        android:textColorLink="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login_continue"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignLeft="@id/login_phone"
        android:layout_alignTop="@id/login_phone"
        android:layout_alignRight="@id/login_phone"
        android:layout_marginTop="85dp"
        android:background="@drawable/button"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/login_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/login_ne3"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="220dp"
        android:layout_marginBottom="25dp"
        android:text="@string/sign_up"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/login_ne1"
        android:layout_width="290dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/ic_new_servii_logoartboard_3" />


    <View
        android:id="@+id/login_ne2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/login_ne3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Don't have an account?                "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/login_ne4"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/login_ne7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/login"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/login_ne5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/login_ne4"
        android:layout_alignTop="@id/login_ne4"
        android:layout_alignRight="@id/login_ne4"
        android:layout_marginTop="40dp"
        android:text="@string/enter_your_phone_number_to_proceed"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/login_ne6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/login_ne4"
        android:layout_alignTop="@id/login_ne5"
        android:layout_alignRight="@id/login_ne4"
        android:layout_marginTop="55dp"
        android:text="@string/_10_digit_mobile_number"
        android:textColor="@color/colorAccent"
        android:textSize="17sp" />

    <View
        android:id="@+id/login_ne7"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignTop="@id/login_ne1"
        android:layout_marginTop="200dp"
        android:background="@color/dark_grey" />


</RelativeLayout>